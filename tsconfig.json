{
  "files": [
    "src/index.ts"
  ],
  "compilerOptions": {
    "target": "es5",
    "module": "es2015",
    "moduleResolution": "node",
    "declaration": true,
    "outDir": "lib/",

    "importHelpers": true,
    "jsx": "react",
